<!DOCTYPE html>
<html>
  <head>
    <%- include('../partials/head') %> <!-- 외부 ejs(head) 가져옴 -->
  </head>
  <body>
    <%- include('../partials/nav') %> <!-- 외부 ejs(nav) 가져옴-->

    <div class="contact contact-index">
      <h2>Index</h2>
      <ul>
        <% contacts.forEach(function(contact) { %> <!-- 코드를 반복해서 표시 -->
            <li class="list-group-item">
                <a href="/contacts/<%= contact._id %>"><%= contact.name %></a> <!-- show action과 연결 -->          
            </li>
        <% }) %>
      </ul>
    </div>
  </body>
</html>